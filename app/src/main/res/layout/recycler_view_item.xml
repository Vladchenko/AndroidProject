<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="@dimen/address_layout_width"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/house_up_margin"
        android:layout_toRightOf="@id/house_image_view"
        android:gravity="bottom|left"
        android:maxLines="1"
        android:text="@string/address"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/extra_office_text_view"
        android:layout_width="@dimen/address_layout_width"
        android:layout_height="20dp"
        android:layout_below="@id/address_text_view"
        android:layout_toRightOf="@id/house_image_view"
        android:maxLines="1"
        android:text="@string/extra_office"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/house_image_view"
        android:layout_width="@dimen/house_size"
        android:layout_height="@dimen/house_size"
        android:layout_marginLeft="@dimen/house_left_margin"
        android:layout_marginRight="@dimen/house_right_margin"
        android:layout_marginTop="@dimen/house_up_margin"
        android:background="@drawable/ic_brightness_1_black_24dp"
        android:contentDescription="Circle with a house in a center of it"
        android:scaleType="center"
        android:tint="@android:color/background_light"
        android:src="@drawable/ic_home_black_24dp" />

    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/house_size"
        android:layout_marginTop="@dimen/house_up_margin"
        android:layout_toRightOf="@id/address_text_view"
        android:gravity="center"
        android:text="@string/distance"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>
