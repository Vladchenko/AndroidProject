<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secondTask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vladislav.androidtest.Main3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:background="@color/colorAccent"
        android:id="@+id/directions">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="20dp"
            android:id="@+id/addressOffice">

            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/extra_office"
                android:text="@string/extra_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <ImageView
            android:id="@+id/verticalLine"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@android:color/background_light"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:id="@+id/directionDistance">

            <ImageView
                android:id="@+id/turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_subdirectory_arrow_right_black_24dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/background_light" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/house_up_margin"
                android:layout_toRightOf="@id/address_text_view"
                android:gravity="center"
                android:text="12 км."
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/condition"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mood_black_24dp"
            android:id="@+id/imageView"
            android:paddingRight="16dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Состояние"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/operating"
                android:text="Работает"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

    </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:color/darker_gray"
            android:paddingLeft="45dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_query_builder_black_24dp"
            android:id="@+id/clock"
            android:layout_margin="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weekDays">

            <TextView
                android:text="Понедельник"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
            android:text="Вторник"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Среда"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Четверг"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_text_view"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Пятница"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Суббота"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:paddingTop="15dp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <TextView
                android:text="Воскресенье"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hoursPerDay">

            <TextView
                android:text="10.00-19.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="10.00-19.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_2"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="10.00-19.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_3"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="10.00-19.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_4"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="10.00-19.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_5"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Закрыто"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_6"
                android:paddingTop="15dp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <TextView
                android:text="Закрыто"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_8"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/information"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/info"
            android:padding="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Телефон для справок"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info"
                android:paddingTop="10dp"
                android:textStyle="bold" />

            <TextView
                android:text="+7 (800) 555-55-00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telephoneN"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            android:id="@+id/phoneSet"
            android:padding="15dp"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView2" />

</LinearLayout>
