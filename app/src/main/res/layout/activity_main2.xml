<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vladislav.androidtest.MainActivity">

    <ImageView
        android:id="@+id/house_image_view"
        android:layout_width="@dimen/house_size"
        android:layout_height="@dimen/house_size"
        android:layout_marginRight="@dimen/house_right_margin"
        android:background="@drawable/ic_brightness_1_black_24dp"
        android:contentDescription="Circle with a house in a center of it"
        android:scaleType="center"
        android:tint="@android:color/background_light"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <LinearLayout
        android:id="@+id/address_office_layout"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginRight="100dp">

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:maxLines="1"
            android:text="@string/address"
            android:textSize="@dimen/address_text_size" />

        <TextView
            android:id="@+id/extra_office_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/extra_office"
            android:textSize="@dimen/extra_office_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/directionDistance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/distance"
        android:textAlignment="center"
        android:textSize="@dimen/distance_text_size"/>

</LinearLayout>
